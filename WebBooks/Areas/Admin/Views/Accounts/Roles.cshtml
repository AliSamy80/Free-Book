@model RolesViewModel
@{
    ViewData["Title"] = "Roles";
}

<div class="wrapper">
<!------Content-Header------>
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"> @ResourceWeb.lbRoleUser</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/Admin/Home/Index">@ResourceWeb.LbHomePage</a></li>
                        <li class="breadcrumb-item active">@ResourceWeb.LbManageBook</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>


    <!-- Main content -->
    <section class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-start">
                        <h3 class="card-title" style="margin-left:20px">@ResourceWeb.lbRoleUser</h3>
                        <div class="card-tools">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-outline-primary rounded-pill" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                @ResourceWeb.lbBtnSaveNewRole
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover text-center">
                            <thead>
                                <tr>
                                    <td>@ResourceWeb.LbNameRole</td>
                                    <td>@ResourceWeb.LbEvents</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model.Roles){
                                    <tr>
                                        <td>
                                            @switch(item.Name){
                                                case "SuperAdmin":
                                                    <span class="badge badge-danger" style="width:250px; height:25px">@item.Name</span>
                                                    break;
                                                case "Admin":
                                                    <span class="badge badge-success" style="width:250px; height:25px">@item.Name</span>
                                                    break;
                                                default:
                                                    <span class="badge badge-warning" style="width:250px; height:25px">@item.Name</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <input type="button" class="btn btn-info" value="@ResourceWeb.LbBtnEdit" />
                                            <input type="button" class="btn btn-danger" onclick="Delete('@item.Id')" value="@ResourceWeb.LbBtnDelete" />

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
</div>

<!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">@ResourceWeb.lbBtnSaveNewRole</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form asp-action="Roles" asp-area="Admin" asp-controller="Accounts" method="post"> 
                                <div class="form-group">
                                    <label class="control-lable">@ResourceWeb.LbNameRole</label>
                                    <input type="text" class="form-control" asp-for="NewRole.Name"/>
                                    <span asp-validation-for="NewRole.Name" class="text-danger"></span>
                                </div>

                                <div class="modal-footer">
                                    <input type="submit" class="btn btn-success" value="@ResourceWeb.lbBtnSaveNewRole"/>
                                    <button type="button" class="btn btn-secondary">Close</button>
                                </div>
                            </form>
                        </div>
                      
                    </div>
                </div>
            </div>

@section Scripts {
     @if (!string.IsNullOrEmpty(Context.Session.GetString("MsgType")))
     {
         if (Context.Session.GetString("MsgType") == "success")
         {
            <script>
               Swal.fire({
                   position: "top-end",
                   icon: "success",
                   title: @Context.Session.GetString("title"),
                   text: @Context.Session.GetString("msg"),
                   confirmButtonText: 'حسنـــاً',
               });
            </script>
         }
         else
         {
            <script>
               Swal.fire({
                   icon: "error", 
                   title: @Context.Session.GetString("title"),
                   text: @Context.Session.GetString("msg"),
                   confirmButtonText: 'حسنـــاً',
                });
            </script>
         }
         Context.Session.SetString("msgType", "");
     }    
     
     <script src="~/Models/Roles.js"></script>
}